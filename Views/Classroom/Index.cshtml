@using SchoolPlanner.Models
@model Reader

@{
    ViewData["Title"] = "Classrooms";
}

<style>
    th {width:150px;}
    button {height:50px; max-width:150px;}
</style>

<div class="text-center">

    <h1 class="display-4">CLASSROOMS</h1>

    @Html.DropDownListFor(model=>model.Classrooms, new SelectList(Model.Classrooms, "", "Number"), "Select a classroom", new {htmlAttributes = new {@class="form-control"}})

    <table>
        <thead>
            <th></th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
        </thead>
        @for(int i=0; i<9; i++) {
            <tr>
                @switch(i) {
                    case 0:
                        <td><strong>8:00 - 8:45</strong></td>
                        break;
                    case 1:
                        <td><strong>9:00 - 9:45</strong></td>
                        break;
                    case 2:
                        <td><strong>10:00 - 10:45</strong></td>
                        break;
                    case 3:
                        <td><strong>11:00 - 11:45</strong></td>
                        break;
                    case 4:
                        <td><strong>12:00 - 12:45</strong></td>
                        break;
                    case 5:
                        <td><strong>13:00 - 13:45</strong></td>
                        break;
                    case 6:
                        <td><strong>14:00 - 14:45</strong></td>
                        break;
                    case 7:
                        <td><strong>15:00 - 15:45</strong></td>
                        break;
                    case 8:
                        <td><strong>16:00 - 16:45</strong></td>
                        break;
                    default:
                        break;
                }
                @for(int j=0; j<5; ++j) {
                    <td>
                        <button type="button" class="btn btn-primary btn-block"></button>
                    </td>
                }
                
            </tr>   
            <br>
        }
    </table>

</div>