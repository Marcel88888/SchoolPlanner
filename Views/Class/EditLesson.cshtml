@model Reader

@{
    ViewData["Title"] = "Edit lesson";
}

<div class="text-center">
    <h1 class="display-4">Edit lesson</h1>
</div>

@{ int lessonToEditIndex = (int)ViewData["lessonToEditIndex"]; }

@using (Html.BeginForm("SubmitEditingLesson", "Class", new { editedLesson = Model.EditedLesson, id = lessonToEditIndex})) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger"} )

    @Html.DropDownListFor(model=>model.EditedLesson.Classroom, new SelectList(Model.Classrooms, "Number", "Number", Model.Lessons[lessonToEditIndex].Classroom), "Select the classroom", new {htmlAttributes = new {@class="form-control"}})
    @Html.DropDownListFor(model=>model.EditedLesson.Class, new SelectList(Model.Classes, "Name", "Name", Model.Lessons[lessonToEditIndex].Class), "Select the class", new {htmlAttributes = new {@class="form-control"}})
    @Html.DropDownListFor(model=>model.EditedLesson.Subject, new SelectList(Model.Subjects, Model.Lessons[lessonToEditIndex].Subject), "Select the subject", new {htmlAttributes = new {@class="form-control"}})
    @Html.DropDownListFor(model=>model.EditedLesson.Teacher, new SelectList(Model.Teachers, "Surname", "Surname", Model.Lessons[lessonToEditIndex].Teacher), "Select the teacher", new {htmlAttributes = new {@class="form-control"}}) 

    <button type="submit" class="btn btn-primary">Edit</button>
}

@foreach (Lesson lesson in Model.Lessons) {
    Console.WriteLine(lesson.Subject);
}