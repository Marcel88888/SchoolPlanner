@model Reader

@{
    ViewData["Title"] = "Edit lesson";
}

<div class="text-center">
    <h1 class="display-4">Edit lesson</h1>
</div>

@foreach (Lesson lesson in Model.Lessons) {
    Console.WriteLine(lesson.Subject);
}

@{
    int lessonToEditIndex = (int)ViewData["lessonToEditIndex"];
}

@using (Html.BeginForm("SubmitEditingLesson", "Class", FormMethod.Post)) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger"} )

        // LessonCreator
        @Html.DropDownListFor(model=>model.Lessons[lessonToEditIndex].Classroom, new SelectList(Model.Classrooms, "", "Number"), "Select the classroom", new {htmlAttributes = new {@class="form-control"}})
        @Html.DropDownListFor(model=>model.Lessons[lessonToEditIndex].Class, new SelectList(Model.Classes, "", "Name"), "Select the class", new {htmlAttributes = new {@class="form-control"}})
        @Html.DropDownListFor(model=>model.Lessons[lessonToEditIndex].Subject, new SelectList(Model.Subjects), "Select the subject", new {htmlAttributes = new {@class="form-control"}})
        @Html.DropDownListFor(model=>model.Lessons[lessonToEditIndex].Teacher, new SelectList(Model.Teachers, "", "Surname"), "Select the teacher", new {htmlAttributes = new {@class="form-control"}})
        <button type="submit" class="btn btn-primary">Edit</button>
    }